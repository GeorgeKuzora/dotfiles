// see: https://zed.dev/docs/debugger
[
  {
    "adapter": "Debugpy",
    "label": "Debug CV Service (Global)",
    "request": "launch",
    "subProcess": true,
    "redirectOutput": true,
    "program": "./src/app/service.py",
    "args": ["-c", "./config/default.yaml"],
    "stopOnEntry": false,
    "cwd": "./src"
  }
]
