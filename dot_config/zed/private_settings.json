// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "icon_theme": "Catppuccin Mocha",
  "show_edit_predictions": false,
  "edit_predictions": {
    "mode": "subtle"
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "base_keymap": "VSCode",
  "vim_mode": true,
  "vim": {
    // "always": use system clipboard when no register is specified
    // "never": don't use system clipboard unless "+ or "* is specified
    // "on_yank": use system clipboard for yank operations when no register is specified
    "use_system_clipboard": "always",
    // Lets `f` and `t` motions extend across multiple lines
    "use_multiline_find": true
  },
  // disable cursor blink
  "current_line_highlight": "all",
  "cursor_blink": false,
  "relative_line_numbers": false,
  "vertical_scroll_margin": 8,
  "buffer_line_height": "standard",
  "ui_font_size": 16,
  "ui_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 16,
  "remove_trailing_whitespace_on_save": true,
  "project_panel": {
    "dock": "right"
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/.jj",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/.venv",
    "**/hidden*"
  ],
  "language_models": {
    "openai": {
      "api_url": "https://ai.kth.pro/api",
      "available_models": [
        {
          "name": "Instruct",
          "display_name": "Instruct",
          "max_tokens": 32000
        }
      ],
    }
  },
  "agent": {
    "profiles": {
      "devstral": {
        "name": "Devstral",
        "tools": {
          "list_directory": true,
          "diagnostics": false,
          "grep": true,
          "open": true,
          "fetch": true,
          "copy_path": false,
          "now": true,
          "find_path": true,
          "edit_file": false,
          "read_file": true
        },
        "enable_all_context_servers": false,
        "context_servers": {}
      },
      "ask": {
        "name": "Ask",
        "tools": {
          "read_file": true
        },
        "enable_all_context_servers": false,
        "context_servers": {}
      },
      "custom": {
        "name": "Custom",
        "tools": {
                    "project_notifications": false,
                    "thinking": false,
                    "terminal": false,
                    "move_path": false,
                    "create_directory": false,
                    "delete_path": false,
                    "list_directory": true,
                    "diagnostics": false,
                    "grep": true,
                    "open": true,
                    "fetch": true,
                    "copy_path": false,
                    "now": true,
                    "find_path": true,
                    "edit_file": false,
                    "read_file": true
                },
        "enable_all_context_servers": false,
        "context_servers": {}
      }
    },
    "default_profile": "minimal",
    "default_model": {
      "provider": "openai",
      "model": "Instruct"
    },
    "dock": "right"
  },
  "outline_panel": {
    "dock": "right"
  },
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 2,
    "coloring": "fixed",
    "background_coloring": "disabled"
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Catppuccin Mocha"
  },
  "experimental.theme_overrides": {
    "background": "#181825",
    "editor.background": "#181825",
    "editor.gutter": "#181825",
    "editor.gutter.background": "#181825",
    "terminal.background": "#181825",
    "toolbar.background": "#181825",
    "tab.active_background": "#181825"
  },
  "use_autoclose": false,
  "always_treat_brackets_as_autoclosed": false,
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": true
  },
  "tabs": {
    "close_position": "right",
    "file_icons": false,
    "git_status": true
  },
  "format_on_save": "off",
  "file_types": {
    "Dockerfile": ["Dockerfile*"]
  },
  "terminal": {
    "shell": {
      "with_arguments": {
        "program": "fish",
        "args": ["-i"]
      }
    },
    "font_family": "JetBrainsMono Nerd Font",
    "detect_venv": {
      "on": {
        "directories": [".env", "env", ".venv", "venv"],
        "activate_script": "fish"
      }
    },
  },
  "lsp": {
    "gopls": {
      "initialization_options": {
        "hints": {
          "assignVariableTypes": true,
          "compositeLiteralFields": true,
          "compositeLiteralTypes": true,
          "constantValues": true,
          "functionTypeParameters": true,
          "parameterNames": true,
          "rangeVariableTypes": true
        }
      }
    },
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace",
          "typeCheckingMode": "standard",
          "exclude": ["hidden*", ".venv"]
        },
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    },
    "ruff": {
      "initialization_options": {
        "settings": {
          // Ruff server settings goes here
          "lineLength": 80,
          "lint": {
            "extendSelect": ["I"]
          }
        }
      }
    },
    "jj-lsp": {
      "initialization_options": {
        "check": {
          "command": "jj-lsp"
        }
      }
    }
  },
  "languages": {
    "Python": {
      "language_servers": ["pyright"],
      "formatter": {
        "external": {
          "command": "isort",
          "arguments": ["-"]
        }
      },
      "format_on_save": "off"
    }
  }
}
