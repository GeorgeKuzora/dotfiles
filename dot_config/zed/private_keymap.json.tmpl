[
{{- if eq .chezmoi.os "darwin" }}
  {
    "context": "Workspace",
    "bindings": {
      "cmd-j": "workspace::ToggleBottomDock",
      "cmd-shift-j": "terminal_panel::ToggleFocus",
      "cmd-alt-j": "workspace::NewTerminal",

      "cmd-b": "workspace::ToggleRightDock",
      "cmd-alt-b": "workspace::ToggleLeftDock",

      "cmd-e": "project_panel::ToggleFocus",

      "cmd-l": "outline_panel::ToggleFocus",
      "cmd-shift-l": "outline_panel::ToggleFocus"

    }
  },
  {
    "context": "Editor",
    "bindings": {
      "cmd-e": "project_panel::ToggleFocus",

      "cmd-l": "outline_panel::ToggleFocus",
      "cmd-shift-l": "outline_panel::ToggleFocus"
    }
  },
{{- end }}
{{- if eq .chezmoi.os "linux" }}
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-alt-j": "workspace::ToggleBottomDock",
      "cmd-j": "workspace::ToggleBottomDock",
      "cmd-shift-j": "terminal_panel::ToggleFocus",
      "cmd-alt-j": "workspace::NewTerminal",

      "ctrl-shift-b": "workspace::ToggleRightDock",
      "ctrl-alt-b": "workspace::ToggleLeftDock",
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-shift-l": "outline_panel::ToggleFocus"
    }
  },
{{- end }}
  {
    "context": "vim_mode == normal && !menu",
    "bindings": {
      "shift-y": ["workspace::SendKeystrokes", "y $"],
      "space f": "file_finder::Toggle",
      "space space": "file_finder::Toggle"
    }
  },
  {
    "context": "vim_mode == visual && !menu",
    "bindings": {
      ">": ["workspace::SendKeystrokes", "> g v"],
      "<": ["workspace::SendKeystrokes", "< g v"]
    }
  },
  {
    "context": "(vim_mode == normal || vim_mode == visual) && !menu",
    "bindings": {
      "space /": "buffer_search::DeployReplace"
    }
  },
  {
    "context": "vim_mode == visual",
    "bindings": {
      "shift-s": ["vim::PushAddSurrounds", {}]
    }
  }
]
