{{- if eq .chezmoi.os "darwin" }}
[
  {
    "context": "Workspace",
    "bindings": {
      "cmd-j": "workspace::ToggleBottomDock",
      "cmd-b": "workspace::ToggleRightDock",
      "cmd-l": "outline_panel::ToggleFocus",
      "cmd-e": "project_panel::ToggleFocus",
      "cmd-alt-b": "workspace::ToggleLeftDock",
      "cmd-shift-j": "workspace::ToggleBottomDock",
      "cmd-shift-b": "workspace::ToggleRightDock",
      "cmd-shift-l": "outline_panel::ToggleFocus"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "cmd-shift-l": "outline_panel::ToggleFocus",
      "cmd-l": "outline_panel::ToggleFocus",
      "cmd-e": "project_panel::ToggleFocus"
    }
  },
  {
    "context": "vim_mode == normal && !menu",
    "bindings": {
      "shift-y": ["workspace::SendKeystrokes", "y $"]
    }
  },
  {
    "context": "vim_mode == visual && !menu",
    "bindings": {
      ">": ["workspace::SendKeystrokes", "> g v"],
      "<": ["workspace::SendKeystrokes", "< g v"]
    }
  }
]
{{- end }}
