// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "ssh_connections": [
    {
      "host": "orb",
      "args": [],
      "projects": [
        {
          "paths": [
            "/home/kuzora/dev/face-antispoofing"
          ]
        },
        {
          "paths": [
            "/home/kuzora/dev/lisa"
          ]
        },
        {
          "paths": [
            "/home/kuzora/dev/sara"
          ]
        }
      ]
    }
  ],
  "icon_theme": "Catppuccin Mocha",
  "show_edit_predictions": false,
  "edit_predictions": {
    "mode": "subtle"
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "base_keymap": "VSCode",
  "vim_mode": true,
  "vim": {
    // "always": use system clipboard when no register is specified
    // "never": don't use system clipboard unless "+ or "* is specified
    // "on_yank": use system clipboard for yank operations when no register is specified
    "use_system_clipboard": "always",
    // Lets `f` and `t` motions extend across multiple lines
    "use_multiline_find": true
  },
  "auto_install_extensions": {
    "catppuccin": true,
    "catppuccin-icons": true
  },
  "auto_update_extensions": {
    "just": true
  },
  "load_direnv": "direct",
  "use_smartcase_search": true,
  "wrap_guides": [80, 100, 120],
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "current_line_highlight": "all",
  "cursor_blink": false,
  "relative_line_numbers": "disabled",
  "vertical_scroll_margin": 8,
  "buffer_line_height": "standard",
  "ui_font_size": 16,
  "ui_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 16,
  "remove_trailing_whitespace_on_save": true,
  "project_panel": {
    "dock": "right"
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/.jj",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/.venv",
    "**/hidden*"
  ],
  "language_models": {
    "openai": {
      "api_url": "https://ai.kth.pro/api",
      "available_models": [
        {
          "name": "Instruct",
          "display_name": "Instruct",
          "max_tokens": 32000
        },
        {
          "name": "Coder",
          "display_name": "Coder",
          "max_tokens": 131000
        }
      ]
    }
  },
  "agent": {
    "enable_feedback": false,
    "default_model": {
      "provider": "openai",
      "model": "Coder"
    },
    "inline_assistant_model": {
      "provider": "openai",
      "model": "Coder"
    },
    "commit_message_model": {
      "provider": "openai",
      "model": "Coder"
    },
    "thread_summary_model": {
      "provider": "openai",
      "model": "Coder"
    },
    "default_profile": "write"
  },
  "agent_servers": {
    "Qwen Agent": {
      "type": "custom",
      "command": "qwen",
      "args": ["--experimental-acp"],
      "env": {"OPENAI_API_KEY": {{ .koronatech_api_key | quote }} }
    },
    "OpenCode": {
      "type": "custom",
      "command": "opencode",
      "args": ["acp"],
      "env": {"OPENAI_API_KEY": {{ .koronatech_api_key | quote }} }
    }
  },
  "outline_panel": {
    "dock": "right"
  },
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 2,
    "coloring": "fixed",
    "background_coloring": "disabled"
  },
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  },
  "use_autoclose": false,
  "always_treat_brackets_as_autoclosed": false,
  "sticky_scroll": {"enabled": false},
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": true
  },
  "tabs": {
    "close_position": "right",
    "file_icons": false,
    "git_status": true
  },
  "format_on_save": "off",
  "file_types": {
    "Dockerfile": ["Dockerfile*"]
  },
  "terminal": {
    "shell": {
      "with_arguments": {
        "program": "fish",
        "args": ["-i"]
      }
    },
    "font_family": "JetBrainsMono Nerd Font",
    "detect_venv": {
      "on": {
        "directories": [".env", "env", ".venv", "venv"],
        "activate_script": "fish"
      }
    },
  },
  "git_hosting_providers": [
{{- if eq .email "g.kuzora@korona.net" }}
    {
      "provider": "gitlab",
      "name": "Korona GitLab",
      "base_url": "https://git.ftc.ru/"
    },
{{- end }}
    {
      "provider": "github",
      "name": "GitHub",
      "base_url": "https://github.com"
    }
  ],
  "lsp": {
    "gopls": {
      "initialization_options": {
        "hints": {
          "assignVariableTypes": true,
          "compositeLiteralFields": true,
          "compositeLiteralTypes": true,
          "constantValues": true,
          "functionTypeParameters": true,
          "parameterNames": true,
          "rangeVariableTypes": true
        }
      }
    },
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace",
          "typeCheckingMode": "standard",
          "extraPaths": ["./src", "./src/app/core"],
          "exclude": ["hidden*", ".venv"]
        },
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    },
    "basepyright": {
      "settings": {
        "basepyright.analysis": {
          "diagnosticMode": "workspace",
          "typeCheckingMode": "standard",
          "exclude": ["hidden*", ".venv"],
          "extraPaths": ["./src", "./src/app/core"],
          "allowedUntypedLibraries": ["mdw_tracing", "app.system.tracing"]
        },
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    },
    "ruff": {
      "initialization_options": {
        "settings": {
          // Ruff server settings goes here
          "lineLength": 100,
          "lint": {
            "extendSelect": ["I"]
          }
        }
      }
    },
    "jj-lsp": {
      "initialization_options": {
        "check": {
          "command": "jj-lsp"
        }
      }
    }
  },
  "languages": {
    "Python": {
      "language_servers": ["pyright"],
    }
  }
}
